    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run chord-tester.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/chord-tester.py",
            "args": ["localhost:65123", "localhost:65123", "localhost:65124", "localhost:65125"],
            "console": "integratedTerminal"
        }
    ]
}